{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "resetear password",
            "type": "process",
            "command": "dart",
            "args": [
                "escuelas_server/scripts/resetear_password.dart",
                "--email ${input:email-del-user}",
                "--pass ${input:nueva-password-del-user}",
                "--mode ${input:ambiente-de-trabajo}"
            ],
            "problemMatcher": [
                "$dart-build_runner"
            ],
        },
        {
            "type": "flutter",
            "command": "dart",
            "args": [
                "run",
                "build_runner",
                "build",
                "--delete-conflicting-outputs"
            ],
            "problemMatcher": [
                "$dart-build_runner"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${fileWorkspaceFolder}"
            },
            "label": "build_runner build",
            "detail": "ejecuta build_runner watch para un rebuildeo continuo",
            "icon": {
                "id": "eye",
                "color": "terminal.ansiYellow"
            }
        },
        {
            "label": "echo",
            "type": "shell",
            "command": "echo ${workspaceFolder}"
        },
        {
            "type": "melos",
            "script": "serverpodwatch",
            "icon": {
                "id": "eye",
                "color": "terminal.ansiCyan"
            },
            "label": "melos: serverpodwatch",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "revealProblems": "onProblem",
                "group": "watch"
            },
            "problemMatcher": {
                "owner": "dart",
                "applyTo": "allDocuments",
                "source": "serverpod",
                "fileLocation": [
                    "search",
                    {
                        "include": "${workspaceFolder}"
                    }
                ],
                "pattern": {
                    "regexp": "Error on line (\\d+), column (\\d+) of (.*): (.*)\\.",
                    "line": 1,
                    "column": 2,
                    "file": 3,
                    "message": 4
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*Generating code\\.\\.\\.",
                    "endsPattern": ". Generating code \\(.*s\\)"
                }
            }
        },
        {
            "type": "melos",
            "script": "build_runner:watch",
            "icon": {
                "id": "eye",
                "color": "terminal.ansiBlue"
            },
            "label": "melos: build_runner:watch",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "revealProblems": "onProblem",
                "group": "watch"
            },
            "problemMatcher": [
                "$dart-build_runner"
            ],
            "isBackground": true
        },
        {
            "type": "melos",
            "script": "podman:compose",
            "icon": {
                "id": "circuit-board",
                "color": "terminal.ansiWhite"
            },
            "label": "melos: podman:compose"
        },
        {
            "label": "launch Serverpod client",
            "osx": {
                "command": "open",
                "args": [
                    "/Applications/Serverpod.app"
                ]
            },
            "problemMatcher": []
        },
        {
            "label": "create Serverpod migration",
            "options": {
                "cwd": "${workspaceFolder}/escuelas_server",
                "env": {
                    "PATH": "${userHome}/.pub-cache/bin:${env:PATH}",
                }
            },
            "dependsOn": "melos: podman:compose",
            "type": "shell",
            "command": "serverpod",
            "args": [
                "create-migration"
            ],
            "problemMatcher": []
        },
        {
            "label": "watch",
            "icon": {
                "id": "eye",
                "color": "terminal.ansiGreen"
            },
            "dependsOn": [
                "melos: serverpodwatch",
                "melos: build_runner:watch",
            ],
            "problemMatcher": []
        },
        {
            "label": "serverpod",
            "icon": {
                "id": "server",
                "color": "terminal.ansiBlue"
            },
            "dependsOn": [
                "melos: serverpodwatch",
                "melos: build_runner:watch",
                "launch Serverpod client",
                "create Serverpod migrations"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "email-del-user",
            "type": "promptString",
            "description": "Ingrese el email del usuario al cual resetearle la contraseña",
        },
        {
            "id": "ambiente-de-trabajo",
            "type": "pickString",
            "description": "Seleccione el ambiente de trabajo",
            "options": [
                "development",
                "production"
            ],
            "default": "development"
        },
        {
            "id": "nueva-password-del-user",
            "type": "promptString",
            "description": "Ingrese la nueva contraseña del usuario",
            "default": "password1234"
        },
    ]
}