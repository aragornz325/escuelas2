{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.1.0",
  "configurations": [
    {
      "name": "Escuelas development",
      "presentation": {
        "hidden": false,
        "group": "front",
        "order": 1
      },
      "request": "launch",
      "type": "dart",
      // "preLaunchTask": "melos: build_runner:watch",
      "cwd": "${workspaceFolder}/escuelas_flutter",
      "program": "lib/main_development.dart",
      "args": [
        "--flavor",
        "development",
        "--target",
        "lib/main_development.dart"
      ]
    },
    {
      "name": "Escuelas staging",
      "presentation": {
        "hidden": false,
        "group": "front",
        "order": 2
      },
      "request": "launch",
      "type": "dart",
      "cwd": "${workspaceFolder}/escuelas_flutter",
      // "preLaunchTask": "melos: build_runner:watch",
      "program": "lib/main_staging.dart",
      "args": [
        "--flavor",
        "staging",
        "--target",
        "lib/main_staging.dart"
      ]
    },
    {
      "name": "Escuelas production",
      "presentation": {
        "hidden": false,
        "group": "front",
        "order": 3
      },
      "request": "launch",
      "type": "dart",
      "cwd": "${workspaceFolder}/escuelas_flutter",
      // "preLaunchTask": "melos: build_runner:watch",
      "program": "lib/main_production.dart",
      "args": [
        "--flavor",
        "production",
        "--target",
        "lib/main_production.dart"
      ]
    },
    {
      "name": "Serverpod development",
      "request": "launch",
      "type": "dart",
      "cwd": "${workspaceFolder}/escuelas_server",
      "program": "bin/main.dart",
      "preLaunchTask": "melos: podman:compose",
      "args": [
        "--apply-migrations",
      ]
    }
  ],
  "compounds": [
    {
      "name": "Server/Client development",
      "preLaunchTask": "serverpod",
      "configurations": [
        "Escuelas development",
        "Serverpod development"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "serverpod",
        "order": 1
      }
    }
  ]
}